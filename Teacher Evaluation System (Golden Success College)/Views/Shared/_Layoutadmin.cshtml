@using System.Security.Claims
@{
    Layout = null;
    var fullname = User.FindFirstValue(ClaimTypes.Name) ?? "Guest";
    var role = User.FindFirstValue(ClaimTypes.Role) ?? "None";
    var isActive = User.FindFirst("IsActive")?.Value == "true";

    bool isAdmin = User.IsInRole("Admin");
    bool isSuperAdmin = User.IsInRole("Super Admin");
    bool isStudent = User.IsInRole("Student");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Teacher Evaluation System</title>
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#"><img src="~/images/logo.svg" width="30" height="30" alt="Logo"></a>
    </nav>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <div class="sidebar" id="sidebar">
            <div class="logo-details">
                <div class="logo_name">Teacher Evaluation System</div>
                <i class='bx bx-menu' id="btn"></i>
            </div>
            <ul class="nav-list">
                <li><a asp-controller="Dashboard" asp-action="Index"><i class='bx bx-home'></i><span class="links_name">Dashboard</span></a></li>
                @if (isSuperAdmin)
                {
                    <li><a asp-controller="Users" asp-action="Index"><i class='bx bx-user'></i><span class="links_name">Users</span></a></li>
                    <li><a asp-controller="Roles" asp-action="Index"><i class='bx bx-shield-quarter'></i><span class="links_name">Roles</span></a></li>
                    <li><a asp-controller="Levels" asp-action="Index"><i class='bx bx-grid'></i><span class="links_name">Levels</span></a></li>
                    <li><a asp-controller="Sections" asp-action="Index"><i class='bx bx-grid-alt'></i><span class="links_name">Sections</span></a></li>
                    <li><a asp-controller="Enrollments" asp-action="Index"><i class='bx bx-list-plus'></i><span class="links_name">Enrollments</span></a></li>
                    <li><a asp-controller="Students" asp-action="Index"><i class='bx bx-user-plus'></i><span class="links_name">Students</span></a></li>
                    <li><a asp-controller="Subjects" asp-action="Index"><i class='bx bx-book'></i><span class="links_name">Subjects</span></a></li>
                    <li><a asp-controller="Teachers" asp-action="Index"><i class='bx bx-chalkboard'></i><span class="links_name">Teachers</span></a></li>
                    <li><a asp-controller="Criteria" asp-action="Index"><i class='bx bx-task'></i><span class="links_name">Criteria</span></a></li>
                    <li><a asp-controller="Questions" asp-action="Index"><i class='bx bx-question-mark'></i><span class="links_name">Questions</span></a></li>
                    <li><a asp-controller="TeacherEvaluations" asp-action="Index"><i class='bx bx-clipboard'></i><span class="links_name">Teacher Evaluations</span></a></li>
                    <li><a asp-controller="Logs" asp-action="Index"><i class='bx bx-list-ul'></i><span class="links_name">Activity Logs</span></a></li>
                }
                @if (isStudent)
                {
                    <li><a asp-controller="Dashboard" asp-action="Index"><i class='bx bx-home'></i><span class="links_name">Dashboard</span></a></li>
                    <li><a asp-controller="TeacherEvaluations" asp-action="Index"><i class='bx bx-clipboard'></i><span class="links_name">Teacher Evaluations</span></a></li>
                }
            </ul>
            <!-- Profile section outside nav-list -->
            <div class="profile">
                <div class="profile-details">
                    <img src="/background/images.png" alt="profileImg">
                    <div class="name_job">
                        <div class="name">@fullname</div>
                        <div class="job">@role</div>
                    </div>
                </div>
                <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn text-white border-0 bg-transparent p-0 logout-link">
                        <i class='bx bx-log-out' id="log_out"></i>
                    </button>
                </form>
            </div>
        </div>
    }
    <div class="home-section" id="main">
        <main class="container pt-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-center text-muted mt-auto py-3 bg-light">
        <div class="container">
            &copy; 2025 - Teacher Evaluation System - Golden Success College
        </div>
    </footer>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById("sidebar");
            const toggleBtn = document.getElementById("btn");

            toggleBtn?.addEventListener("click", () => {
                sidebar.classList.toggle("open");
            });

            // Nav links hover effect
            const navLinks = document.querySelectorAll(".nav-list li a");
            navLinks.forEach(link => {
                link.addEventListener("mouseenter", () => {
                    link.style.transform = "translateX(5px)";
                });
                link.addEventListener("mouseleave", () => {
                    link.style.transform = "translateX(0)";
                });
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>