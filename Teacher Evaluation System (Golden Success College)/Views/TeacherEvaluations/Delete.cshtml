@model Teacher_Evaluation_System__Golden_Success_College_.Models.Evaluation

@{
    ViewData["Title"] = "Delete Evaluation";
    var studentDisplayName = ViewBag.StudentDisplayName ?? (Model.IsAnonymous ? "Anonymous" : Model.Student?.FullName);
    Layout = "_Layoutadmin";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Evaluation
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">
                            <i class="bi bi-exclamation-circle"></i> Are you sure you want to delete this evaluation?
                        </h4>
                        <hr>
                        <p class="mb-0">
                            <strong>Warning:</strong> This action cannot be undone. All scores and data will be permanently deleted.
                        </p>
                    </div>

                    <!-- Evaluation Details -->
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Evaluation Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <strong><i class="bi bi-person"></i> Teacher:</strong>
                                </div>
                                <div class="col-md-8">
                                    @Model.Teacher?.FullName
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <strong><i class="bi bi-book"></i> Subject:</strong>
                                </div>
                                <div class="col-md-8">
                                    @Model.Subject?.SubjectName
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <strong><i class="bi bi-person-badge"></i> Student:</strong>
                                </div>
                                <div class="col-md-8">
                                    @studentDisplayName
                                    @if (Model.IsAnonymous)
                                    {
                                        <i class="bi bi-incognito text-muted ms-1" title="Anonymous Evaluation"></i>
                                    }
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <strong><i class="bi bi-calendar"></i> Date Evaluated:</strong>
                                </div>
                                <div class="col-md-8">
                                    @Model.DateEvaluated.ToString("MMMM dd, yyyy")
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <strong><i class="bi bi-star-fill"></i> Average Score:</strong>
                                </div>
                                <div class="col-md-8">
                                    <span class="badge @(Model.AverageScore >= 4 ? "bg-success" :
                                                                                                   Model.AverageScore >= 3 ? "bg-primary" :
                                                                                                   Model.AverageScore >= 2 ? "bg-warning" : "bg-danger") fs-6">
                                        @Model.AverageScore.ToString("F2") / 5.00
                                    </span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <strong><i class="bi bi-shield-check"></i> Anonymous:</strong>
                                </div>
                                <div class="col-md-8">
                                    @if (Model.IsAnonymous)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> No
                                        </span>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Comments))
                            {
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <strong><i class="bi bi-chat-left-text"></i> Comments:</strong>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card bg-light">
                                            <div class="card-body">
                                                <p class="mb-0" style="white-space: pre-wrap;">@Model.Comments</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.Scores != null && Model.Scores.Any())
                            {
                                <div class="row">
                                    <div class="col-md-4">
                                        <strong><i class="bi bi-list-check"></i> Total Questions:</strong>
                                    </div>
                                    <div class="col-md-8">
                                        <span class="badge bg-info">@Model.Scores.Count questions answered</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <hr />

                    <form method="post" asp-action="Delete" id="deleteForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="EvaluationId" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg" id="deleteBtn">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Confirm deletion with a modal-like confirmation
        document.getElementById('deleteForm').addEventListener('submit', function(e) {
            const confirmed = confirm('⚠️ Are you absolutely sure you want to delete this evaluation?\n\nThis action cannot be undone!');
            if (!confirmed) {
                e.preventDefault();
                return false;
            }
        });

        // Add a visual feedback on delete button hover
        const deleteBtn = document.getElementById('deleteBtn');
        deleteBtn.addEventListener('mouseenter', function() {
            this.innerHTML = '<i class="bi bi-trash-fill"></i> Click to Delete Permanently';
        });
        deleteBtn.addEventListener('mouseleave', function() {
            this.innerHTML = '<i class="bi bi-trash"></i> Confirm Delete';
        });
    </script>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">