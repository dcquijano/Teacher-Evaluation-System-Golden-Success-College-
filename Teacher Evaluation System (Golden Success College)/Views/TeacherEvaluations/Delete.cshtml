<!-- DELETE VIEW: Views/TeacherEvaluations/Delete.cshtml -->
<!-- ============================================ -->
@model Teacher_Evaluation_System__Golden_Success_College_.Models.Evaluation

@{
    ViewData["Title"] = "Delete Evaluation";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Evaluation</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">Are you sure you want to delete this evaluation?</h4>
                        <p class="mb-0">This action cannot be undone. All scores and data will be permanently deleted.</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Teacher:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Teacher?.FullName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Subject:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Subject?.SubjectName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Student:</strong>
                        </div>
                        <div class="col-md-8">
                            @if (Model.IsAnonymous)
                            {
                                <span class="text-muted">Anonymous</span>
                            }
                            else
                            {
                                @Model.Student?.FullName
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Date Evaluated:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.DateEvaluated.ToString("MMMM dd, yyyy")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Average Score:</strong>
                        </div>
                        <div class="col-md-8">
                            <span class="badge @(Model.AverageScore >= 4 ? "bg-success" :
                                                                                 Model.AverageScore >= 3 ? "bg-primary" :
                                                                                 Model.AverageScore >= 2 ? "bg-warning" : "bg-danger") fs-6">
                                @Model.AverageScore.ToString("F2") / 5.00
                            </span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Comments))
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Comments:</strong>
                            </div>
                            <div class="col-md-8">
                                @Model.Comments
                            </div>
                        </div>
                    }

                    <hr />

                    <form method="post" asp-action="Delete">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="EvaluationId" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>