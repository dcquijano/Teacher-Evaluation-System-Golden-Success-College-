<!-- ============================================ -->
@model Teacher_Evaluation_System__Golden_Success_College_.ViewModels.EvaluationListViewModel

@{
    ViewData["Title"] = "Teacher Evaluations";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Teacher Evaluations</h2>
            <a asp-action="Create" class="btn btn-primary">
                Create New Evaluation
            </a>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Teacher Name</label>
                        <input type="text" class="form-control" name="filterTeacher"
                               value="@Model.FilterTeacherName" placeholder="Search teacher...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Subject</label>
                        <input type="text" class="form-control" name="filterSubject"
                               value="@Model.FilterSubjectName" placeholder="Search subject...">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Date From</label>
                        <input type="date" class="form-control" name="filterDateFrom"
                               value="@Model.FilterDateFrom?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Date To</label>
                        <input type="date" class="form-control" name="filterDateTo"
                               value="@Model.FilterDateTo?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Filter</button>
                        <a asp-action="Index" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Evaluations Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Evaluations.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Subject</th>
                                <th>Teacher</th>
                                <th>Picture</th>
                                <th>Student</th>
                                <th>Date Evaluated</th>
                                <th>Average Score</th>
                                <th>Anonymous</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Evaluations)
                            {
                                <tr>
                                    <td>@item.SubjectName</td>
                                    <td>@item.TeacherName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.TeacherPicturePath))
                                        {
                                            <img src="@Url.Content(item.TeacherPicturePath)" alt="Teacher Picture" class="rounded-circle" style="width:40px;height:40px;">
                                        }
                                        else
                                        {
                                            <i class="bi bi-person-circle fs-3 text-muted"></i>
                                        }
                                    </td>

                                    <td>@item.StudentName</td>
                                    <td>@item.DateEvaluated.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge @(item.AverageScore >= 4 ? "bg-success" :
                                                                                                          item.AverageScore >= 3 ? "bg-primary" :
                                                                                                          item.AverageScore >= 2 ? "bg-warning" : "bg-danger")">
                                    @item.AverageScore.ToString("F2")
                                </span>
                            </td>
                            <td class="text-center">
                                @if (item.IsAnonymous)
                                        {
                                            <i class="bi bi-check-circle text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-x-circle text-muted"></i>
                                        }
                                    </td>
                                    <td>
                                 
                                        <a asp-action="Details" asp-route-id="@item.EvaluationId"
                                           class="btn btn-info text-white me-1"
                                           title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.EvaluationId"
                                           class="btn btn-danger"
                                           title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>

                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <p class="text-muted mb-0">Total Evaluations: @Model.Evaluations.Count</p>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle"></i> No evaluations found.
                </div>
            }
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
